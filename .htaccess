<ifModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "POST, GET, PUT, DELETE, OPTIONS"
    Header set Access-Control-Allow-Headers "Origin, X-Requested-With, Content-Type, Accept, Key,OPTIONS,X-Auth-Token,api-key,Authorization"
    #Header always set Access-Control-Allow-Methods: "POST, GET, PUT, DELETE, OPTIONS"
    #Header always set Access-Control-Allow-Headers: "Origin, X-Requested-With, Content-Type, Accept, Key,OPTIONS,X-Auth-Token,api-key,Authorization"
</ifModule>

<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews
    </IfModule>

    RewriteEngine On

    RewriteCond %{HTTP:Authorization} ^(.*)
    # RewriteCond %{HTTP:Authorization} ^(.+)$
    # RewriteRule .* - [e=HTTP_AUTHORIZATION:%1]
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]
	
    # Redirect Trailing Slashes If Not A Folder...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)/$ /$1 [L,R=301]
    # RewriteRule ^(.*)$ app.php [QSA,L]

    # Handle Front Controller...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>
